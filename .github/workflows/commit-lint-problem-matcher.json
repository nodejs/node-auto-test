{
  "problemMatcher": [
    {
      "owner": "core-validate-commit",
      "severity": "warning",
      "pattern": [
        {
          "regexp": "^  ✖  ([a-z0-9A-Z]+)$",
          "file": 1
        },
        {
          "regexp": "^    ✖  (\\d+):(\\d) +([\\S ]+\\S)  +(\\S+)$",
          "line": 1,
          "column": 2,
          "message": 3,
          "code": 4,
          "loop": true
        }
      ]
    }
  ]
}
